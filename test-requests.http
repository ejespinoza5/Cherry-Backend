### ============================================
### 1. LOGIN COMO ADMINISTRADOR
### ============================================
POST http://localhost:3000/api/auth/login
Content-Type: application/json

{
  "correo": "admin@cherry.com",
  "contraseña": "admin123"
}

### ============================================
### 2. OBTENER MI PERFIL (usa el token del login)
### ============================================
GET http://localhost:3000/api/auth/me
Authorization: Bearer TU_TOKEN_AQUI

### ============================================
### 3. CREAR USUARIO ADMINISTRADOR
### ============================================
POST http://localhost:3000/api/usuarios
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "correo": "admin2@cherry.com",
  "contraseña": "admin456",
  "id_rol": 1
}

### ============================================
### 4. CREAR USUARIO CLIENTE (con datos completos)
### ============================================
POST http://localhost:3000/api/usuarios
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "correo": "cliente1@gmail.com",
  "contraseña": "cliente123",
  "id_rol": 2,
  "nombre": "Juan",
  "apellido": "Pérez",
  "direccion": "Calle 123, Ciudad de México"
}

### ============================================
### 5. CREAR OTRO CLIENTE
### ============================================
POST http://localhost:3000/api/usuarios
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "correo": "maria@gmail.com",
  "contraseña": "maria123",
  "id_rol": 2,
  "nombre": "María",
  "apellido": "García",
  "direccion": "Av. Principal 456"
}

### ============================================
### 6. LISTAR TODOS LOS USUARIOS
### ============================================
GET http://localhost:3000/api/usuarios
Authorization: Bearer TU_TOKEN_AQUI

### ============================================
### 7. OBTENER USUARIO POR ID
### ============================================
GET http://localhost:3000/api/usuarios/1
Authorization: Bearer TU_TOKEN_AQUI

### ============================================
### 8. ACTUALIZAR DATOS DE USUARIO
### ============================================
PUT http://localhost:3000/api/usuarios/2
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "correo": "juan.perez@gmail.com",
  "estado": "activo"
}

### ============================================
### 9. ACTUALIZAR CONTRASEÑA DE USUARIO
### ============================================
PUT http://localhost:3000/api/usuarios/2
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "contraseña": "nuevacontraseña456"
}

### ============================================
### 10. CAMBIAR ROL DE USUARIO
### ============================================
PUT http://localhost:3000/api/usuarios/2
Content-Type: application/json
Authorization: Bearer TU_TOKEN_AQUI

{
  "id_rol": 1
}

### ============================================
### 11. ELIMINAR USUARIO (inactivar)
### ============================================
DELETE http://localhost:3000/api/usuarios/3
Authorization: Bearer TU_TOKEN_AQUI

### ============================================
### 12. LOGIN COMO CLIENTE
### ============================================
POST http://localhost:3000/api/auth/login
Content-Type: application/json

{
  "correo": "cliente1@gmail.com",
  "contraseña": "cliente123"
}

### ============================================
### 13. INTENTAR CREAR USUARIO COMO CLIENTE (debe fallar)
### ============================================
POST http://localhost:3000/api/usuarios
Content-Type: application/json
Authorization: Bearer TOKEN_DE_CLIENTE

{
  "correo": "test@test.com",
  "contraseña": "test123",
  "id_rol": 2,
  "nombre": "Test"
}
